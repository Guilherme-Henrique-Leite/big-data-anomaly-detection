{
    "name": "mle-dev",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "features": {},
    "postCreateCommand": "poetry install",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-azuretools.vscode-docker",
          "ms-python.python"
        ],
        "settings": {
          "[python]": {
            "editor.formatOnSave": true
          }
        }
      }
    },
    "remoteUser": "root"
  }